<h2 class="subtitle">Form with FormBuilder</h2>

using
<code>
  form_with builder: BulmaFormBuilder::FormBuilder do |form|
    # ...
  end
</code>
<br/>
<br/>

<%= form_with builder: BulmaFormBuilder::FormBuilder do |form|  %>
  <div class="box">
    <h3 class="title is-4 has-text-centered"><i>"Natively" supported: text_field</i></h3>
    <div class="field">
      <%= form.label :text_field %>
      <%= form.text_field :text_field %>
    </div>
    <div class="field">
      <%= form.label :text_field_with_placeholder %>
      <%= form.text_field :text_field_with_placeholder, placeholder: "With placeholder" %>
    </div>
    <h3 class="title is-5 has-text-centered"><i>Additions to text_field</i></h3>
    <div class="field">
      <%= form.label :text_field_with_help %>
      <%= form.text_field :text_field_with_help, help: "With `help` option" %>
    </div>
    <div class="field">
      <%= form.label :text_field_with_icon_left %>
      <%= form.text_field :text_field_with_icon_left, icon_left: 'fa fa-ethernet', help: "With `icon_left` (and `help`) option" %>
    </div>
  </div>

  <div class="box">
    <h3 class="title is-4 has-text-centered"><i>"Natively" supported: check_box</i></h3>
    <div class="field">
      <%= form.label :check_box %>
      <%= form.check_box :check_box %>
    </div>
    <h3 class="title is-5 has-text-centered"><i>Additions to check_box</i></h3>
    <div class="field">
      <%= form.label :check_box %>
      <%= form.check_box :check_box, label: 'label' %>
    </div>
  </div>

  <div class="box">
    <h3 class="title is-4 has-text-centered"><i>"Natively" supported: number_field</i></h3>
    <div class="field">
      <%= form.label :number_field %>
      <%= form.number_field :number_field %>
    </div>
    <h3 class="title is-5 has-text-centered"><i>Additions to number_field</i></h3>
    <div class="field">
      <%= form.label :number_field_with_help %>
      <%= form.number_field :number_field_with_help, help: 'help text' %>
    </div>
  </div>

  <div class="box">
    <h3 class="title is-4 has-text-centered"><i>"Natively" supported: text_area</i></h3>
    <div class="field">
      <%= form.label :text_area %>
      <%= form.text_area :text_area %>
    </div>
  </div>
<% end %>
